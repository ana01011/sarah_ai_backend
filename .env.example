# Sarah AI Backend Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=sarah_ai_fresh
POSTGRES_USER=sarah_user
POSTGRES_PASSWORD=sarah_secure_2024

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Generate a secure secret key for JWT tokens
# You can generate one with: openssl rand -hex 32
JWT_SECRET=your_secure_jwt_secret_key_change_this_to_random_string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================
# AI MODEL CONFIGURATION
# ============================================
# Path to your OpenHermes model file
MODEL_PATH=/root/openhermes_backend/openhermes-2.5-mistral-7b.Q4_K_M.gguf
MODEL_CONTEXT_SIZE=1024
MODEL_THREADS=4
MODEL_BATCH_SIZE=256

# ============================================
# API SERVER CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8000

# ============================================
# GOOGLE OAUTH (Optional)
# ============================================
# Leave empty if not using Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_REGISTRATION=true
ENABLE_GOOGLE_OAUTH=false

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO

